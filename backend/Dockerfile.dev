FROM golang:1.25-alpine

WORKDIR /app

# Install Air for hot-reloading (updated path)
RUN go install github.com/air-verse/air@latest

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

EXPOSE 8080

# Use Air to run with hot-reload
CMD ["air", "-c", ".air.toml"]
